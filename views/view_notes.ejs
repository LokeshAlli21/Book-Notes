<%- include('partials/header.ejs'); %>

<div class="container book-container section">
    <div class="b-detail-container">
        <a href="/book/<%= book.id %>">
            <img src="https://covers.openlibrary.org/b/isbn/<%= book.isbn %>-M.jpg" alt="Image for <%= book.title %>">
        </a>
        <div class="b-details">
            <a href="/book/<%= book.id %>">
                <h1><%= book.title %></h1>
            </a>
            <h3>Author: <%= book.author %></h3>
            <h3>ISBN: <%= book.isbn %></h3>
            <h3>Date Read: <%= book.date %></h3>
            <div class="rating">
                <h3>Ratings -</h3>
                <div class="star-rating">
                    <input type="radio" id="st-5" value="5" name="rating" disabled>
                    <label for="st-5">
                        <span class="fa fa-star"></span>
                    </label>
                    <input type="radio" id="st-4" value="4" name="rating" disabled>
                    <label for="st-4">
                        <span class="fa fa-star"></span>
                    </label>
                    <input type="radio" id="st-3" value="3" name="rating" disabled>
                    <label for="st-3">
                        <span class="fa fa-star"></span>
                    </label>
                    <input type="radio" id="st-2" value="2" name="rating" disabled>
                    <label for="st-2">
                        <span class="fa fa-star"></span>
                    </label>
                    <input type="radio" id="st-1" value="1" name="rating" required disabled> 
                    <label for="st-1">
                        <span class="fa fa-star"></span>
                    </label>
                </div>
            </div>

        </div>
    </div>
    <script>
        document.querySelector('.star-rating input#st-<%= book.rating %>').checked = true;;
    </script>
    <div class="b-notes-container">
        <p><%= book.notes %></p>
    </div>
</div>

<%- include('partials/footer.ejs'); %>